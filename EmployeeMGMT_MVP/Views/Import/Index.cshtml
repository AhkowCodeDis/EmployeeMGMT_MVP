@model EmployeeMGMT_MVP.Models.Employee

@{
    ViewBag.Title = "Index";
}

<h2>Batch Upload Via Input File</h2>

<div class="container">
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="row">
                @using (Html.BeginForm("Index", "Import", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">

                        @Html.Label("File Upload", new { @class = "col-sm-3" })

                        <div class="col-sm-7">
                            <input type="file" id="postedFile" name="postedFile" class="form-control" accept=".csv" />
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-offset-3 col-md-10">
                            <br />
                            <input type="submit" title="Upload" value="Upload" class="btn btn-default" />
                        </div>
                    </div>
                    <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <br />
                        <span style="color:green;">
                            @Html.Raw(@ViewBag.Output)
                        </span>
                    </div>

                    <div class="col-md-offset-3 col-md-10">
                        <br />
                        <span style="color:red;">
                            @Html.Raw(@ViewBag.Message)
                        </span>
                    </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

